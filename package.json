{
    "name": "xon",
    "displayName": "XON",
    "description": "XON Language Support",
    "author": "Nizami Amirov",
    "publisher": "nizami",
    "version": "1.3.0",
    "license": "MIT",
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:xon"
    ],
    "bugs": {
        "url": "https://github.com/xon-lang/vsce/issues"
    },
    "homepage": "https://github.com/xon-lang/vsce#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/xon-lang/vsce.git"
    },
    "keywords": [
        "XON",
        "Programming Language"
    ],
    "icon": "icon.png",
    "categories": [
        "Programming Languages"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "xon.format.enable": true,
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "xon",
                "aliases": [
                    "XON",
                    "xon"
                ],
                "extensions": [
                    ".xon"
                ],
                "configuration": "./contributes/language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "xon",
                "scopeName": "source.xon",
                "path": "./contributes/xon.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "^14.14.25",
        "@types/vscode": "^1.53.0",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@xon/formatter": "^1.0.4"
    }
}
